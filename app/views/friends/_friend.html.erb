<div id="<%= dom_id friend %>">

<div class="jumbotron">
  <h1 class="display-4">
    <%= friend.first_name %>
    <%= friend.last_name %>
  </h1>
  <p class="lead">
  
    <strong>Email:</strong><%= friend.email %>  |  
    <strong>Phone:</strong><%= friend.phone %>  |  
      <strong>Twitter:</strong><%= friend.twitter %>
  </p>
  <hr class="my-4">
   <%= link_to "Edit this friend", edit_friend_path(@friend), class:"btn btn-secondary" %> 
  <%= link_to "Back to friends", friends_path, class:"btn btn-secondary" %> 
</div>


</div>


